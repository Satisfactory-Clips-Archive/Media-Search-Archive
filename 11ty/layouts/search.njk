<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>Q&amp;A Clips Archive - {{title}}</title>
{% include 'head.njk' %}
<meta property="og:article:modified_time" content="{{page.date.toUTCString()}}">

<script src="/lunr.min.js"></script>
<script src="/lunr-highlighter.js"></script>
<link rel="preload" as="fetch" crossorigin="anonymous" href="/lunr/search.json">
<link rel="preload" as="fetch" crossorigin="anonymous" href="/synonyms.json">
<link rel="preload" as="fetch" crossorigin="anonymous" href="/topics.json">
<template id="loading">
	<section>
		<header>Loading</header>
		<nav>
			<a
				href="/"
			>Browse Index</a>
			<a
				href="/FAQ"
			>Browse FAQ</a>
			<a
				href="/topics"
			>Browse Topics</a>
		</nav>
		<section>
			<p>Please be patient while the application loads.</p>
		</section>
	</section>
</template>
<template id="ready">
	<section>
		<header>
			<h1>Q&amp;A Clips Archive - Search</h1>
			<nav>
				<a
					href="/"
				>Browse Index</a>
				<a
					href="/FAQ"
				>Browse FAQ</a>
				<a
					href="/topics"
				>Browse Topics</a>
			</nav>
			<p>
				<output for="search"></output>
				covering the period
				<output for="date-from date-to">
					<output for="date-from"></output>
					to
					<output for="date-to"
				></output></output>.
			</p>
		</header>
		<section>
			<form action="/search">
				<input type="search" id="search" required name="q" title="Search Query">
				<section
					role="group"
					aria-labelledby="date-slider-label"
				>
					<h1 id="date-slider-label">Date Range</h1>
					<label for="date-from">Date From</label>
					<input
						id="date-from"
						name="df"
						type="range"
					>
					<label for="date-to">Date To</label>
					<input
						id="date-to"
						name="dt"
						type="range"
					>
					<output for="date-from date-to">
						<output for="date-from"></output>
						-
						<output for="date-to"></output>
					</output>
				</section>
				<select name="t" title="Topic Filter">
					<option value="" selected>All</option>
				</select>
				<section
					role="group"
					aria-labelledby="sort-order"
				>
					<h1 id="sort-order">Sort Order</h1>
					<input
						id="sort-by-relevance"
						type="radio"
						name="s"
						value="r"
						checked
					>
					<input
						id="sort-by-date"
						type="radio"
						name="s"
						value="d"
					>
					<label
						tabindex="0"
						for="sort-by-relevance"
						title="Sort by relevance"
					>ðŸ”¢</label>
					<label
						tabindex="0"
						for="sort-by-date"
						title="Sort by date"
					>ðŸ“…</label>
				</section>
				<button type="submit" title="Search">ðŸ”Ž</button>
			</form>
		</section>
		<section class="results">
		</section>
	</section>
</template>
<template id="document-result">
	<li>
		<section>
			<h1></h1>
			<h2></h2>
			<div></div>
			<h3>Topics</h3>
			<ul></ul>
			<h3>Transcript</h3>
			<aside></aside>
		</section>
		<!--
		<button class="copy" type="button">Copy to Clipboard</button>
		-->
	</li>
</template>
</head>
<body>
{{content | safe}}{% include 'footer.njk'
%}<script async defer src="/index.js"></script>
</body>
</html>
